<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for debugging -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender for detailed logs -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>orientdb-debug.log</file>
        <append>false</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- OrientDB specific loggers at DEBUG level -->
    <logger name="com.orientechnologies" level="DEBUG"/>
    <logger name="com.orientechnologies.orient.core" level="DEBUG"/>
    <logger name="com.orientechnologies.orient.core.db" level="DEBUG"/>
    <logger name="com.orientechnologies.orient.core.serialization" level="DEBUG"/>
    <logger name="com.orientechnologies.orient.core.storage" level="DEBUG"/>

    <!-- JBake loggers -->
    <logger name="org.jbake" level="INFO"/>

    <!-- Root logger -->
    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>
