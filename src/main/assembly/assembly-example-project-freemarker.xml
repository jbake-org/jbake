<assembly>
	<id>base</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<!-- Generates a zip package containing the needed files -->
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.build.directory}/example-project-freemarker/</directory>
			<outputDirectory>/</outputDirectory>
			<excludes>
				<exclude>.git</exclude>
				<exclude>README.md</exclude>
				<exclude>LICENSE</exclude>
			</excludes>
		</fileSet>
	</fileSets>
</assembly>