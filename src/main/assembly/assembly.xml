<assembly>
    <id>bin</id>
    <!-- Generates a zip package containing the needed files -->
    <formats>
        <format>zip</format>
    </formats>

    <!-- Adds dependencies to zip package under lib directory -->
    <dependencySets>
        <dependencySet>
            <!--
                Project artifact is not copied under library directory since
                it is added to the root directory of the zip package.
            -->
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <unpack>false</unpack>
        </dependencySet>
    </dependencySets>

    <fileSets>
	<!--
           Adds startup scripts to the root directory of zip package. The startup
           scripts are located to src/main/scripts directory as stated by Maven
           conventions.
	-->
        <fileSet>
            <directory>${project.build.scriptSourceDirectory}</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>jbake*</include>
            </includes>
        </fileSet>
        <fileSet>
        	<directory>${project.basedir}/src/main/logging</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>logback.xml</include>
            </includes>
        </fileSet>
        <fileSet>
        	<!-- adds jar package to the root directory of zip package -->
            <directory>${project.build.directory}</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>jbake-core.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>LICENSE</include>
            </includes>
        </fileSet>
        <fileSet>
        	<!-- adds example projects files to the root directory of zip package -->
        	<directory>${project.build.directory}</directory>
        	<outputDirectory></outputDirectory>
            <includes>
                <include>example*.zip</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
