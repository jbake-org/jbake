doctype xml
rss(version='2.0', xmlns:atom='http://www.w3.org/2005/Atom')
  channel
    title JonathanBullock.com
    link #{config.site_host}
    atom:link(href='#{config.site_host}/feed.xml', rel="self", type='application/rss+xml')
    description My corner of the Internet
    language en-gb
    pubDate #{dates.format(published_date,"EEE, d MMM yyyy HH:mm:ss Z")}
    if posts.length
      lastBuildDate #{dates.format(published_date,"EEE, d MMM yyyy HH:mm:ss Z")}
    each post in posts
      item
        title #{post.title}
        link http://jonathanbullock.com#{post.uri}
        description
          <![CDATA[!{post.body}]]>
        pubDate #{dates.format(post.date, "EEE, d MMM yyyy HH:mm:ss Z")}
        guid(isPermaLink='false') #{post.uri}


